{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/plugins/source-storyblok/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program Plugin",
      "program": "${workspaceRoot}/node_modules/gridsome/bin/gridsome.js",
      "runtimeArgs": ["--inspect-brk=9229"],
      "args": ["develop"],
      "port": 9229
    },
    {
      "name": "Netlify Debugging",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}\\node_modules\\.bin\\netlify",
      "runtimeArgs": ["run-script", "debug"],
      "runtimeExecutable": "/home/joe/.local/share/nvm/v16.14.2/bin/npm",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "netlify dev",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/.netlify/functions-serve/**/*.js"],
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": ["dev"],
      "console": "integratedTerminal",
      "env": { "BROWSER": "none", "NODE_OPTIONS": "--inspect" },
      "serverReadyAction": {
        "pattern": "Server now ready on (https?://[w:.-]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "netlify functions:serve",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/.netlify/functions-serve/**/*.js"],
      "program": "${workspaceFolder}/node_modules/.bin/netlify",
      "args": ["functions:serve"],
      "console": "integratedTerminal",
      "env": { "NODE_OPTIONS": "--inspect" }
    }
  ]
}
